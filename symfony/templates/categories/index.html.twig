{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block content %}

    <div class="container mx-auto mt-4 p-4 border">

        <h1 class="text-xl font-bold mb-4">Categories</h1>

        <a href="{{ path('category_add') }}"
           class="my-8 inline-block w-auto bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">Add
            New Category
        </a>

        <div class="table-container border">
            <table class="table-fixed w-full">
                <thead>
                <tr>
                    <th class="table-header">Id</th>
                    <th class="table-header">Kategoria</th>
                    <th class="table-header">English</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td class="table-cell"> {{ category.id }} </td>
                        <td class="table-cell"> {{ category.namePolish }} </td>
                        <td class="table-cell"> {{ category.nameEnglish }} </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
