{% extends 'base.html.twig' %}

{% block title %}{{ pageTitle|default('Dodaj kategorię') }}{% endblock %}

{% block content %}
    <div class="container mx-auto mt-4 xl:w-1/3">
        <h1 class="text-2xl font-bold text-gray-900 mb-8">{{ pageTitle|default('Dodaj kategorię') }}</h1>

        <h2 class="text-xl font-bold text-gray-900 mb-4">Istniejące kategorie</h2>
        <ul class="list-disc list-inside mb-8">
            {% for category in categories %}
                <li>{{ category.name }}</li>
            {% else %}
                <li>Brak kategorii.</li>
            {% endfor %}
        </ul>

        <form action="{{ path('category_add') }}" method="post" class="space-y-6 bg-white p-8 shadow-xl rounded-lg">
            <div>
                <label for="name" class="block text-lg font-semibold text-gray-800">Nazwa kategorii:</label>
                <input type="text" id="name" name="name" required class="mt-2 block w-full px-4 py-3 border-2 border-gray-400 rounded-lg text-lg">
            </div>
            <div>
                {% include 'components/button.html.twig' with {
                    text: 'Dodaj kategorię',
                    icon: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>',
                    type: 'submit',
                    additional_class: 'cursor-pointer'
                } %}
            </div>
        </form>
    </div>
{% endblock %}
