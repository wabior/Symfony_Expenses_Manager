{# Wsp√≥lny komponent przycisku #}
{% if href is defined %}
    <a href="{{ href }}" class="{{ class|default('btn-primary') }} {{ additional_class|default('') }}">
        {% if icon is defined %}
            <svg class="w-5 h-5 {{ icon_position|default('left') == 'right' ? 'ml-2' : 'mr-2' }} inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {{ icon|raw }}
            </svg>
        {% endif %}
        {{ text }}
    </a>
{% else %}
    <button type="{{ type|default('button') }}" class="{{ class|default('btn-primary') }} {{ additional_class|default('') }}">
        {% if icon is defined %}
            <svg class="w-5 h-5 {{ icon_position|default('left') == 'right' ? 'ml-2' : 'mr-2' }} inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {{ icon|raw }}
            </svg>
        {% endif %}
        {{ text }}
    </button>
{% endif %}
