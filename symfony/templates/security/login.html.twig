{% extends 'base.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block content %}
    <div class="container mx-auto mt-8 xl:w-1/3">
        <h1 class="text-2xl font-bold text-gray-900 mb-8">Zaloguj się</h1>

        {% if error %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-6">
                Jesteś zalogowany jako {{ app.user.userIdentifier }}. <a href="{{ path('app_logout') }}" class="underline hover:no-underline">Wyloguj się</a>
            </div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post" class="space-y-6 bg-white p-8 shadow-xl rounded-lg">
            <div>
                <label for="username" class="block text-lg font-semibold text-gray-800">Email:</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" required autofocus
                       class="mt-2 block w-full px-4 py-3 border-2 border-gray-400 rounded-lg text-lg focus:border-blue-500 focus:outline-none">
            </div>

            <div>
                <label for="password" class="block text-lg font-semibold text-gray-800">Hasło:</label>
                <input type="password" name="_password" id="password" required
                       class="mt-2 block w-full px-4 py-3 border-2 border-gray-400 rounded-lg text-lg focus:border-blue-500 focus:outline-none">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="flex space-x-4">
                <button type="submit" class="px-6 py-3 bg-blue-600 text-white font-bold text-lg rounded-lg hover:bg-blue-800 focus:outline-none focus:shadow-outline">
                    Zaloguj się
                </button>
                <a href="{{ path('app_register') }}" class="px-6 py-3 bg-gray-600 text-white font-bold text-lg rounded-lg hover:bg-gray-800 focus:outline-none focus:shadow-outline">
                    Zarejestruj się
                </a>
            </div>
        </form>
    </div>
{% endblock %}
