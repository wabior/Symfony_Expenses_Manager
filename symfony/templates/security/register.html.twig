{% extends 'base.html.twig' %}

{% block title %}Rejestracja{% endblock %}

{% block content %}
    <div class="container mx-auto mt-8 xl:w-1/3">
        <h1 class="text-2xl font-bold text-gray-900 mb-8">Zarejestruj się</h1>

        {% if errors.general is defined %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6">
                {{ errors.general }}
            </div>
        {% endif %}

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-6">
                {{ message }}
            </div>
        {% endfor %}

        <form action="{{ path('app_register') }}" method="post" class="space-y-6 bg-white p-8 shadow-xl rounded-lg">
            <div>
                <label for="email" class="block text-lg font-semibold text-gray-800">Email:</label>
                <input type="email" value="{{ email }}" name="email" id="email" required autofocus
                       class="mt-2 block w-full px-4 py-3 border-2 border-gray-400 rounded-lg text-lg focus:border-blue-500 focus:outline-none{% if errors.email is defined %} border-red-500{% endif %}">
                {% if errors.email is defined %}
                    <p class="mt-1 text-sm text-red-600">{{ errors.email }}</p>
                {% endif %}
            </div>

            <div>
                <label for="password" class="block text-lg font-semibold text-gray-800">Hasło:</label>
                <input type="password" name="password" id="password" required
                       class="mt-2 block w-full px-4 py-3 border-2 border-gray-400 rounded-lg text-lg focus:border-blue-500 focus:outline-none{% if errors.password is defined %} border-red-500{% endif %}">
                {% if errors.password is defined %}
                    <p class="mt-1 text-sm text-red-600">{{ errors.password }}</p>
                {% endif %}
            </div>

            <div>
                <label for="confirm_password" class="block text-lg font-semibold text-gray-800">Potwierdź hasło:</label>
                <input type="password" name="confirm_password" id="confirm_password" required
                       class="mt-2 block w-full px-4 py-3 border-2 border-gray-400 rounded-lg text-lg focus:border-blue-500 focus:outline-none{% if errors.confirm_password is defined %} border-red-500{% endif %}">
                {% if errors.confirm_password is defined %}
                    <p class="mt-1 text-sm text-red-600">{{ errors.confirm_password }}</p>
                {% endif %}
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('registration') }}">

            <div class="flex items-center justify-between">
                <button type="submit" class="px-6 py-3 bg-blue-600 text-white font-bold text-lg rounded-lg hover:bg-blue-800 focus:outline-none focus:shadow-outline">
                    Zarejestruj się
                </button>
                <a href="{{ path('app_login') }}" class="text-blue-600 hover:text-blue-800 font-semibold">
                    Masz już konto? Zaloguj się
                </a>
            </div>
        </form>
    </div>
{% endblock %}