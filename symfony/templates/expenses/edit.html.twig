{% extends 'expenses/add.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('payment_status') }}
    {{ encore_entry_script_tags('delete_modal') }}
    
    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
        <div class="bg-white rounded-lg p-8 max-w-md w-full mx-4">
            <h2 class="text-2xl font-bold text-red-600 mb-4">Delete Expense</h2>
            
            <div class="mb-6">
                <p class="text-lg mb-4">Are you sure you want to delete this expense?</p>
                
                {% if expense is defined and expense.isRecurring() %}
                <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded mb-4">
                    <strong>⚠️ Warning:</strong> This is a recurring expense. 
                    All future occurrences will also be deleted.
                </div>
                {% endif %}
                
                <div class="bg-gray-100 p-4 rounded">
                    <p><strong>{{ expense.name }}</strong></p>
                    <p>Amount: {{ expense.amount }} PLN</p>
                    <p>Date: {{ expense.date|date('Y-m-d') }}</p>
                </div>
            </div>

            <div class="flex space-x-4 justify-end">
                <button type="button" onclick="hideDeleteConfirm()" 
                        class="px-6 py-3 bg-gray-300 text-gray-700 font-bold rounded-lg hover:bg-gray-400">
                    Cancel
                </button>
                <button type="button" onclick="confirmDelete()" 
                        class="px-6 py-3 bg-red-600 text-white font-bold rounded-lg hover:bg-red-800">
                    Yes, Delete
                </button>
            </div>
        </div>
    </div>
{% endblock %}
