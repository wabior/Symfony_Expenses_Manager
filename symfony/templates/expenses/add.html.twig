{% extends 'base.html.twig' %}

{% block title %}
    {% if expense is defined %}Edit Expense{% else %}Add Expense{% endif %}
{% endblock %}

{% block content %}
<div class="container mx-auto mt-4 xl:w-1/3">
    <h1 class="text-2xl font-bold text-gray-900 mb-8">
        {% if expense is defined %}Edit expense{% else %}Add a new expense{% endif %}
    </h1>
        <form action="{{ path(expense is defined ? 'expenses_edit' : 'expenses_add', expense is defined ? {id: expense.id} : {}) }}"
            method="post" class="space-y-6 bg-white/25 p-8 shadow-xl rounded-lg">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('submit') }}">
            <div>
                <label for="name" class="block text-lg font-semibold text-gray-800">Expense Name:</label>
                <input type="text" id="name" name="name" required
                    value="{{ expense.name ?? '' }}"
                    class="mt-2 block w-full px-4 py-3 border-2 border-gray-400 rounded-lg text-lg bg-gray-100">
            </div>
            <div class="flex space-x-4">
                <div class="flex-1">
                    <label for="amount" class="block text-lg font-semibold text-gray-800">Amount:</label>
                    <input type="number" id="amount" name="amount" step="0.01" required
                        value="{{ expense.amount ?? '' }}"
                        class="h-14 mt-2 block w-full px-4 py-3 border-2 border-gray-400 rounded-lg text-lg bg-gray-100">
                </div>
                {% if expense is not defined %}
                <div class="flex-1">
                    <label for="paymentStatus" class="block text-lg font-semibold text-gray-800">Payment Status:</label>
                    <select id="paymentStatus" name="paymentStatus" required class="h-14 mt-2 block w-full px-4 py-3 border-2 border-gray-400 rounded-lg text-lg">
                        <option value="unpaid" {{ (expense.paymentStatus ?? 'unpaid') == 'unpaid' ? 'selected' : '' }}>Unpaid</option>
                        <option value="paid" {{ (expense.paymentStatus ?? 'unpaid') == 'paid' ? 'selected' : '' }}>Paid</option>
                        <option value="partially_paid" {{ (expense.paymentStatus ?? 'unpaid') == 'partially_paid' ? 'selected' : '' }}>Partially Paid</option>
                    </select>
                </div>
                {% endif %}
            </div>
            <div>
                <label for="date" class="block text-lg font-semibold text-gray-800">Date:</label>
                <input type="date" id="date" name="date" required 
                    value="{{ expense is defined and expense.date ? expense.date|date('Y-m-d') : "now"|date("Y-m-d") }}"
                    class="mt-2 block w-full px-4 py-3 border-2 border-gray-400 rounded-lg text-lg bg-gray-100">
            </div>
            <div>
                <label for="category" class="block text-lg font-semibold text-gray-800">Category:</label>
                <select id="category" name="category" required class="mt-2 block w-full px-4 py-3 border-2 border-gray-400 rounded-lg text-lg bg-gray-100">
                    {% for category in categories %}
                        <option value="{{ category.id }}" {{ expense is defined and expense.category and expense.category.id == category.id ? 'selected' :
                            (expense is not defined and loop.last ? 'selected' : '')
                        }}>
                            {{ category.namePolish }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label for="recurringFrequency" class="block text-lg font-semibold text-gray-800">Cykl powtarzania:</label>
                <select id="recurringFrequency" name="recurringFrequency" class="mt-2 block w-full px-4 py-3 border-2 border-gray-400 rounded-lg text-lg bg-gray-100">
                    {% set frequencies = {
                        0: 'Nie powtarza się',
                        1: 'Co 1 miesiąc',
                        2: 'Co 2 miesiące',
                        3: 'Co 3 miesiące',
                        4: 'Co 4 miesiące',
                        6: 'Co 6 miesięcy',
                        12: 'Co 12 miesięcy'
                    } %}
    
                    {% for value, label in frequencies %}
                        <option value="{{ value }}" {{ expense is defined and (expense.recurringFrequency ?? 0) == value ? 'selected' : '' }}>
                            {{ label }}
                        </option>
                    {% endfor %}
                </select>
                <p class="text-sm text-gray-600 mt-1">Wydatki z cyklem > 0 będą automatycznie dodawane w następnych miesiącach.</p>
            </div>
            {% if expense is not defined %}
            <div>
                <label for="paymentDate" class="block text-lg font-semibold text-gray-800">Payment Date:</label>
                <input type="date" id="paymentDate" name="paymentDate"
                    value="{{ expense is defined and expense.paymentDate ? expense.paymentDate|date('Y-m-d') : '' }}"
                    class="mt-2 block w-full px-4 py-3 border-2 border-gray-400 rounded-lg text-lg bg-gray-100">
            </div>
            {% endif %}
            <div class="flex justify-between">
                {% if expense is defined %}
                <button type="button" 
                    class="px-6 py-3 bg-red-400 text-white font-bold text-lg rounded-lg hover:bg-red-800"
                    onclick="showDeleteConfirm({{ expense.id }})">
                    Delete Expense
                </button>
                {% endif %}
                <button type="submit" class="px-6 py-3 bg-blue-600 text-white font-bold text-lg rounded-lg hover:bg-blue-800">
                    {% if expense is defined %}Update Expense{% else %}Add Expense{% endif %}
                </button>
            </div>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('payment_status') }}
{% endblock %}
