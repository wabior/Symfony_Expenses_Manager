{% extends 'base.html.twig' %}

{% block title %}
    {% if expense is defined %}Edytuj wydatek{% else %}Dodaj wydatek{% endif %}
{% endblock %}

{% block content %}
<div class="container mx-auto mt-4 xl:w-1/3">
    <h1 class="text-2xl font-bold text-gray-900 mb-8">
        {% if expense is defined %}Edytuj wydatek{% else %}Dodaj nowy wydatek{% endif %}
    </h1>
        <form action="{{ path(expense is defined ? 'expenses_edit' : 'expenses_add', expense is defined ? {id: expense.id} : {}) }}"
            method="post" class="space-y-6 bg-white/25 p-8 shadow-xl rounded-lg">

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('submit') }}">
            <div>
                {% include 'components/select.html.twig' with {
                    label: 'Kategoria:',
                    id: 'category',
                    name: 'category',
                    required: true,
                    show_placeholder: false,
                    selected: categories|first.getId(),
                    options: categoryOptions
                } %}
            </div>
            <div>
                {% include 'components/input.html.twig' with {
                    label: 'Nazwa wydatku:',
                    type: 'text',
                    id: 'name',
                    name: 'name',
                    required: true,
                    value: expense.name ?? ''
                } %}
            </div>
            <div class="flex space-x-4">
                <div class="flex-1">
                    {% include 'components/input.html.twig' with {
                        label: 'Kwota:',
                        type: 'number',
                        id: 'amount',
                        name: 'amount',
                        required: true,
                        step: '0.01',
                        value: expense.amount ?? '',
                        class: 'h-14'
                    } %}
                </div>
                {% if expense is not defined %}
                <div class="flex-1">
                    {% include 'components/select.html.twig' with {
                        label: 'Status płatności:',
                        id: 'paymentStatus',
                        name: 'paymentStatus',
                        required: true,
                        selected: expense.paymentStatus ?? 'unpaid',
                        options: {
                            'unpaid': 'Nieopłacony',
                            'paid': 'Opłacony',
                            'partially_paid': 'Częściowo opłacony'
                        }
                    } %}
                </div>
                {% endif %}
            </div>
            <div>
                {% include 'components/input.html.twig' with {
                    label: 'Data:',
                    type: 'date',
                    id: 'date',
                    name: 'date',
                    required: true,
                    value: expense is defined and expense.date ? expense.date|date('Y-m-d') : "now"|date("Y-m-d")
                } %}
            </div>
            <div>
                {% include 'components/select.html.twig' with {
                    label: 'Cykl powtarzania:',
                    id: 'recurringFrequency',
                    name: 'recurringFrequency',
                    selected: expense.recurringFrequency ?? 0,
                    options: {
                        0: 'Nie powtarza się',
                        1: 'Co 1 miesiąc',
                        2: 'Co 2 miesiące',
                        3: 'Co 3 miesiące',
                        4: 'Co 4 miesiące',
                        6: 'Co 6 miesięcy',
                        12: 'Co 12 miesięcy'
                    }
                } %}
                <p class="text-sm text-gray-600 mt-1">Wydatki z cyklem > 0 będą automatycznie dodawane w następnych miesiącach.</p>
            </div>
            {% if expense is not defined %}
            <div>
                {% include 'components/input.html.twig' with {
                    label: 'Data płatności:',
                    type: 'date',
                    id: 'paymentDate',
                    name: 'paymentDate',
                    value: expense is defined and expense.paymentDate ? expense.paymentDate|date('Y-m-d') : ''
                } %}
            </div>
            {% endif %}
            <div class="flex justify-between">
                {% if expense is defined %}
                <button type="button" 
                    class="px-6 py-3 bg-red-400 text-white font-bold text-lg rounded-lg hover:bg-red-800"
                    onclick="showDeleteConfirm({{ expense.id }})">
                    Usuń wydatek
                </button>
                {% endif %}
                <button type="submit" class="px-6 py-3 bg-blue-600 text-white font-bold text-lg rounded-lg hover:bg-blue-800">
                    {% if expense is defined %}Zaktualizuj wydatek{% else %}Dodaj wydatek{% endif %}
                </button>
            </div>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('payment_status') }}
{% endblock %}
